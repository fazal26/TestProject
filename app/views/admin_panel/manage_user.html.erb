<div class="well">
  <h3 style= "text-align:center">Add User</h3>
  <%= simple_form_for @user do |f| %>
  <%= f.input :email, placeholder: "user@organization.com" %>
  <%= f.input :username, placeholder: "Jon Doe" %>
  <%= radio_button_tag 'user[role]' ,label: "user" %>
  <%= label_tag("User") %>
  <%= radio_button_tag 'user[role]',"verifier"%>
  <%= label_tag( "Verifier") %>
  <%= f.button :submit %>
  <% end %>
</div>

<br>
<div class="well">

    <table id="userTable" class="table table-hover">
      <thead>
        <tr>
          <th> Username</th>    
          <th> Email</th>
          <th> Joining Date</th>
          <th> Actions</th>              
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= u.username %></td>
            <td><%= u.email%></td>
            <td><%= u.created_at%></td>
            <td><button><%= link_to "Show", user_path(u)%></button> <button><%= link_to "Delete", user_path(u), method: :delete, data: { confirm: "You Sure?"}%></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>


