<h3 style = "text-align:center">Edit Profile</h3>
<div class = "row">
<div class ="col-sm-9">
<div class="well" style = "width:60vw">
  <%= form_for @user do |f| %>
    <label>Username:</label>
    <%= f.text_field :username%>
    <br>
    <label>User Email:</label>
    <%= f.text_field  :email, readonly: true%>
    <br>

    <label>Profile Image:</label>
    <%= f.file_field :image, label: "Upload Image" %>

    <br>
    <%= f.submit "Save" %>
  <% end %>
</div>
</div>
<div class = "col-sm-3">
<div class = "profileImage">
<%= image_tag(user_profile(@user), style:"width: 20vw")%>
</div>
</div>
</div>