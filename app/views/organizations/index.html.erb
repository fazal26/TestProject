
<div style="text-align:center">
  <button><%= link_to "Add Organization", new_organization_path%></button>
</div>
<br>

<div class="well">
  <h3 style="text-align:center">All Organizations</h3>
  <table id="organizationTable" class="table table-hover">
    <thead>
      <tr>
        <th>Index</th>
        <th>Title</th>    
        <th>Admin</th>
        <th>Total Cases</th>  
        <th>Total Users</th>   
        <th>Joined</th> 
        <th>Actions</th>           
      </tr>
    </thead>
    <tbody>
      <% @orgs.each_with_index do |o,i| %>
        <tr>
          <td><%=i+1%></td>
          <td><%=o.title%></td>
          <td><%= User.with_role(:admin, o).first.email%></td>
          <td><%=o.users.count%></td>   <%# this is to be replaced with cases after association of cases and organizations%>
          <td><%=o.users.count%></td>
          <td><%=o.created_at%></td>
          <td><button><%= link_to "Show", organization_path(o)%></button> <button><%= link_to "Edit", edit_organization_path(o)%></button> 
              <button><%= link_to "Delete", organization_path(o), method: :delete, data:{ confirm: "Are you Sure?"}%></button>
          </td>          

        </tr>
      <% end %>
    </tbody>
  </table>
</div>