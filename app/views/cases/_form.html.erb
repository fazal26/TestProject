<div class="well">
  <%= simple_form_for @case, html: { multipart: true } do |f| %>
    <label>Category: </label>
    <%= f.select :category_id, options_for_select(@categories), class: "input input-sm", prompt: "Select category"%>
    <%= f.input :verifierPreference, label: "Verifier Preference" %>
    <%= f.input :name, label: "Person Name" %>
    <%= f.input :contact, label: "Contact" %>
    <%= f.input :address, label: "Address" %>
    <%= f.input :cnic, label: "CNIC" %>
    <%= f.input :description, label: "Case Details" %>
    <%= f.file_field :files, multiple: true, label: "Attachments", class: "btn-default"  %>
    <br/>
    <%= f.button :submit , class: "btn-primary" %>
  <% end %>
</div>
