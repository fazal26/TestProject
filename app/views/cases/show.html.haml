%h1 Case Details
.well
  %h3 Verifier PReference (Hint) 
  = @case.verifierPreference
  %h3 Title:
  = @case.title 
  %h3 Status
  = @case.status 
  %h3 Category:
  = @case.category.name
  %h3 Full Name:
  = @case.name
  %h3 Contact: 
  = @case.contact
  %h3 Address: 
  = @case.address
  %h3 CNIC: 
  = @case.cnic
  %h3 Description: 
  = @case.description
  %h3 Attachments: 
  %ol
    - @case.files.each do |file|
      %li= link_to file.filename, file, download: ""
  %br/
  %br/
  %button= link_to "Edit", edit_case_path(@case)
  %button= link_to "Delete",  case_path, method: :delete, data: { confirm: "You Sure?"}